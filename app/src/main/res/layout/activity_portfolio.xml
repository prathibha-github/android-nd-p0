<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".PortfolioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/app_title"
            android:textAppearance="@android:color/black"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/spotify_streamer_app_button"
            android:layout_below="@+id/textView"
            android:text="@string/spotify_streamer_app_button_text"
            style="@style/button_style"/>

        <Button
            android:id="@+id/football_scores_app_button"
            android:layout_below="@+id/spotify_streamer_app_button"
            android:text="@string/football_scores_app_button_text"
            style="@style/button_style"/>

        <Button
            android:id="@+id/library_app_button"
            android:layout_below="@+id/football_scores_app_button"
            android:text="@string/library_app_button_text"
            style="@style/button_style"/>

        <Button
            android:id="@+id/build_it_bigger_app_button"
            android:layout_below="@+id/library_app_button"
            android:text="@string/build_it_bigger_app_button_text"
            style="@style/button_style"/>

        <Button
            android:id="@+id/xyz_reader_app_button"
            android:layout_below="@+id/build_it_bigger_app_button"
            android:text="@string/xyz_reader_app_button_text"
            style="@style/button_style"/>

        <Button
            android:id="@+id/capstone_app_button"
            android:layout_below="@+id/xyz_reader_app_button"
            android:text="@string/capstone_app_button_text"
            style="@style/button_style"/>

    </RelativeLayout>
</ScrollView>